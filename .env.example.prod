# Production Environment Configuration
# Copy this file to .env on your production server and update the values
# CRITICAL: Never commit this file with actual values to version control

# Django Settings
DJANGO_SETTINGS_MODULE=backend.whatsapp_ai_chatbot.settings.production
SECRET_KEY=your-very-strong-secret-key-here-use-random-generator
DEBUG=False

# Server Configuration
# CRITICAL: Set this to your actual production domain(s), comma-separated
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database Configuration
DB_NAME=whatsapp_chatbot_prod
DB_USER=postgres
DB_PASSWORD=your-very-strong-database-password-here
DB_HOST=db
DB_PORT=5432
DB_CONN_MAX_AGE=600

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# AI Configuration (use OpenRouter or OpenAI)
OPENROUTER_API_KEY=your-openrouter-api-key
# OR
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=openai/gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Application Settings
MAX_CONVERSATION_HISTORY=10
SESSION_TIMEOUT_MINUTES=30

# Booking System Settings
BOOKING_WEB_APP_URL=https://yourdomain.com
BOOKING_PENDING_TIMEOUT_MINUTES=30
BOOKING_CANCELLATION_DEADLINE_HOURS=24

# Security Settings - CRITICAL FOR PRODUCTION
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60

# CRITICAL: These must NOT be set in production
# DEV_OTP_CODE=  # DO NOT SET THIS IN PRODUCTION
# SKIP_WEBHOOK_SIGNATURE_VERIFICATION=  # DO NOT SET THIS IN PRODUCTION

# Optional: Pexels API for activity images
# PEXELS_API_KEY=your-pexels-api-key
